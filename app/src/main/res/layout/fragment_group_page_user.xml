<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/header"
            app:layout_constraintTop_toBottomOf="@id/img_banner"
            app:cardCornerRadius="18dp"
            android:translationY="-12dp"
            android:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="28dp"
                android:paddingBottom="16dp"
                android:background="@color/blue_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Alam Damai Badminton Group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/ic_location_white"
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Alam Damai Community Court"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/ic_account_circle_white"
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Kenneth Liew Yi Ming"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_gravity="bottom">

                        <Button
                            android:background="@color/white"
                            android:textColor="@color/blue_primary"
                            android:text="Join"
                            android:textSize="16sp"
                            android:paddingHorizontal="18dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="3dp"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/img_banner"
            android:src="@drawable/badmintoncourt1"
            app:layout_constraintDimensionRatio="H,1:0.6"
            android:scaleType="centerCrop"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <ImageView
            android:elevation="5dp"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_back_white"
            android:layout_width="42dp"
            android:layout_height="42dp"/>

        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="Upcoming Sessions"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ScrollView
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:text="1 May 2022 (Sunday)"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/black"
                                android:text="08:00 - 10:00"
                                android:textSize="16sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            android:layout_gravity="center_vertical">

                            <Button
                                android:background="@color/blue_primary"
                                android:textColor="@color/white"
                                android:text="View"
                                android:textSize="16sp"
                                android:paddingHorizontal="16dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="3dp"
                                android:minHeight="0dp"
                                android:minWidth="0dp"
                                android:textAllCaps="false"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </ScrollView>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
